{% extends 'base.html.twig' %}

{%  dump  %}

{% block body %}

    {% if is_granted('ROLE_USER') %}



    {{ form_start(form) }}



    <div class="boxcontainer section">
    <div class="box">
        <h1> <span class="dot">.</span> LIVRE D'OR <span class="dot">.</span></h1>

        {{ form_widget(form.text, {'attr': {
            'required': 'true',
            'placeholder': "Entrer votre texte",
            'class': 'textarea-contact',
        }})  }}
        {{ form_errors(form.text) }}
        {{ form_help(form.text) }}

            <button class="button-contact">Envoyer</button>

    </div>
</div>

    {{ form_end(form) }}


    <div class="boxcontainer section">
    <div class="box">
        <h1> <span class="dot">.</span> LIVRE D'OR <span class="dot">.</span></h1>

        {% if livre_or.text is defined %}
            <p> {{ livre_or.text }} </p>
        {% else %}
            <p>Aucun commentaire</p>
        {% endif %}
    </div>
</div>




    {% else %}


<div class="boxcontainer section">
    <div class="box">
        <div class="m-4">
            <div class=" veuillez "> Veuillez vous connecter pour laisser vos messages</div>
        </div>
            <div class="adherent">
                <form action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                    <input  class="input" type="text" id="username" name="_username" required="required" autocomplete="username" placeholder="Identifiant"/><br>
                    <input  class="input" type="password" id="password" name="_password" required="required" autocomplete="current-password" placeholder="Mot de passe"/><br>
                    <div>
                        <input  class="login button-header" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                    </div>

                    <div class="mt-3">
                        <a class="button-contact " href="register">{{ 'base.header.lien.signIn' | trans }}</a>
                    </div>
                </form>
            </div>
    </div>
</div>

    {% endif %}

{% endblock %}
